FROM node:18-alpine

WORKDIR /app

# Install dependencies for building
RUN apk add --no-cache libc6-compat

# Copy package files
COPY package.json package-lock.json* ./

# Install ALL dependencies (including devDependencies)
RUN npm ci

# Copy source code
COPY . .

# Build the application first to ensure PostCSS works
RUN npm run build

# Expose port
EXPOSE 3000

# Start in development mode
CMD ["npm", "run", "start"] 